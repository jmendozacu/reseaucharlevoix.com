<?xml version="1.0"?>
<config>
    <modules>
        <Drieworks_Tickets>
            <version>0.1.0</version>
        </Drieworks_Tickets>
    </modules>
    <frontend>
        <routers>
            <tickets>
                <use>standard</use>
                <args>
                    <module>Drieworks_Tickets</module>
                    <frontName>tickets</frontName>
                </args>
            </tickets>
        </routers>
        <layout>
            <updates>
                <tickets>
                    <file>tickets.xml</file>
                </tickets>
            </updates>
        </layout>
		<translate>
            <modules>
                <tickets>
                    <files>
                        <default>Drieworks_Tickets.csv</default>
                    </files>
                </tickets>
            </modules>
        </translate>
    </frontend>
	<adminhtml>
        <translate>
            <modules>
                <tickets>
                    <files>
                        <default>Drieworks_Tickets.csv</default>
                    </files>
                </tickets>
            </modules>
        </translate>
    </adminhtml>
    <global>
    	<rewrite>
	        <tickets_test> <!--This can be any unique id -->
	            <from><![CDATA[#^/checkout/onepage/#]]></from>  <!-- the URL which u want to override-->
	            <to>/tickets/onepage/</to>  <!-- destination url -->
	        </tickets_test>
	    </rewrite>
    	<events>
	      <sales_model_service_quote_submit_after> <!-- Event called after order placed -->
	      		<observers>
	      	 		<sales_model_service_quote_submit_after>
		                    <type>singleton</type>
		                    <class>Drieworks_Tickets_Model_Observer</class> <!-- Over Model Class -->
		                    <method>saveOrderAfter</method> <!-- name of function -->
	                 </sales_model_service_quote_submit_after>
	             </observers>
	      </sales_model_service_quote_submit_after>
		</events> 	
        <models>
        	<checkout>
	            <rewrite>
	                <type_onepage>Drieworks_Tickets_Model_Checkout_Type_Onepage</type_onepage>
	            </rewrite>
	        </checkout>
            <tickets>
                <class>Drieworks_Tickets_Model</class>
                <resourceModel>tickets_mysql4</resourceModel>
            </tickets>
        </models>
        <resources>
            <tickets_setup>
                <setup>
                    <module>Drieworks_Tickets</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tickets_setup>
            <tickets_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </tickets_write>
            <tickets_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </tickets_read>
        </resources>
        <blocks>
        	<checkout>
        		<rewrite>
        			<onepage>Drieworks_Tickets_Block_Checkout_Onepage</onepage>
        		</rewrite>
        	</checkout>
			<tickets>
                <class>Drieworks_Tickets_Block</class>
            </tickets>
        </blocks>
        <helpers>
            <tickets>
                <class>Drieworks_Tickets_Helper</class>
            </tickets>
        </helpers>
    </global>
</config>