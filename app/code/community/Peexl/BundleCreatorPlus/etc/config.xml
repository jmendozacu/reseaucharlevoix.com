<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Peexl_BundleCreatorPlus>
            <version>1.3.0</version>
        </Peexl_BundleCreatorPlus>
    </modules>
    <frontend>
        <routers>
            <bundlecreatorplus>
                <use>standard</use>
                <args>
                    <module>Peexl_BundleCreatorPlus</module>
                    <frontName>bcp</frontName>
                </args>
            </bundlecreatorplus>
        </routers>
        <layout>
            <updates>
                <bundlecreatorplus>
                    <file>bundlecreatorplus.xml</file>
                </bundlecreatorplus>
            </updates>
        </layout>
        <events>
            <catalog_product_get_final_price>
                <observers>
                    <bundlecreatorplus>
                        <class>bundlecreatorplus/observer</class>
                        <method>setPriceOnProductPage</method>
                    </bundlecreatorplus>
                </observers>
            </catalog_product_get_final_price>
            <catalog_controller_product_view>
                <observers>
                    <bundlecreatorplus>
                        <class>bundlecreatorplus/observer</class>
                        <method>productView</method>
                    </bundlecreatorplus>
                </observers>
            </catalog_controller_product_view>
            <sales_quote_product_add_after>
                <observers>
                    <bundlecreatorplus>
                        <class>bundlecreatorplus/observer</class>
                        <method>setCorrectParentItems</method>
                    </bundlecreatorplus>
                </observers>
            </sales_quote_product_add_after>
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <update_qty_ordered>
                        <class>bundlecreatorplus/observer</class>
                        <method>updateQtOrdered</method>
                    </update_qty_ordered>
                </observers>
            </sales_convert_quote_item_to_order_item>
        </events>
    </frontend>
    <global>
        <catalog>
            <product>
                <type>
                    <extendedbundle translate="label" module="bundlecreatorplus">
                        <label>Extended Bundle</label>
                        <model>bundlecreatorplus/package</model>
                        <price_model>bundlecreatorplus/package_price</price_model>
                        <composite>1</composite>
                        <allowed_selection_types>
                            <configurable/>
                            <simple/>
                            <virtual/>
                            <downloadable/>
                            <bundle/>
                        </allowed_selection_types>
                        <index_data_retreiver>catalogindex/data_simple</index_data_retreiver>
                    </extendedbundle>
                </type>
            </product>
        </catalog>
        <blocks>
            <bundlecreatorplus>
                <class>Peexl_BundleCreatorPlus_Block</class>
            </bundlecreatorplus>
        </blocks>
        <helpers>
            <bundlecreatorplus>
                <class>Peexl_BundleCreatorPlus_Helper</class>
            </bundlecreatorplus>
        </helpers>
        <models>
            <bundlecreatorplus>
                <class>Peexl_BundleCreatorPlus_Model</class>
                <resourceModel>bundlecreatorplus_resource</resourceModel>
            </bundlecreatorplus>
            <bundlecreatorplus_resource>
                <class>Peexl_BundleCreatorPlus_Model_Resource</class>
                <entities>
                    <item>
                        <table>bcp_item</table>
                    </item>
                    <item_option>
                        <table>bcp_item_option</table>
                    </item_option>
                    <item_attribute_value>
                        <table>bcp_item_attribute_value</table>
                    </item_attribute_value>
                </entities>
            </bundlecreatorplus_resource>
        </models>
        <resources>
            <bundlecreatorplus_setup>
                <setup>
                    <module>Peexl_BundleCreatorPlus</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bundlecreatorplus_setup>
            <bundlecreatorplus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bundlecreatorplus_write>
            <bundlecreatorplus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bundlecreatorplus_read>
        </resources>
        <pdf>
            <invoice>
                <extendedbundle>bundlecreatorplus/order_pdf_items_invoice_default</extendedbundle>
            </invoice>
        </pdf>
    </global>
    <admin> 
        <routers> 
            <adminhtml> 
                <args> 
                    <modules> 
                        <bundlecreatorplus after="Mage_Adminhtml">Peexl_BundleCreatorPlus_Adminhtml</bundlecreatorplus> 
                    </modules> 
                </args> 
            </adminhtml> 
        </routers> 
    </admin>    
    <adminhtml>
        <layout>
            <updates>
                <bundlecreatorplus>
                    <file>bundlecreatorplus.xml</file>
                </bundlecreatorplus>
            </updates>
        </layout>
        <events>
            <catalog_product_edit_action>
                <observers>
                    <bundlecreatorplus_product_edit_observer>
                        <class>bundlecreatorplus/observer</class>
                        <method>setAttributeTabBlock</method>
                    </bundlecreatorplus_product_edit_observer>
                </observers>
            </catalog_product_edit_action>
            <catalog_product_new_action>
                <observers>
                    <bundlecreatorplus_product_new_observer>
                        <class>bundlecreatorplus/observer</class>
                        <method>setAttributeTabBlock</method>
                    </bundlecreatorplus_product_new_observer>
                </observers>
            </catalog_product_new_action>
        </events>
    </adminhtml>
</config>